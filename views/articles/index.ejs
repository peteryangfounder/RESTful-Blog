<%- include('../partials/header') -%>

<div class="jumbotron">
    <div class="container m-4">
        <h1 class="font-weight-light"><i class="fas fa-pen-square"></i> <span class="font-weight-bold">RESTful</span> Blog</h1>
        <a class="btn btn-success mt-2 btn-lg" href="/articles/new">+ Article</a>
    </div>
</div>

<% articles.forEach(article => { %>
<div class="card m-5">
    <div class="card-header">
        <h3 class="card-title"><%= article.title %></h3>
    </div>
    <div class="card-body">
        <p class="text-muted"><%= article.createdAt.toLocaleDateString() %></p>
        <p class="card-text"><%= article.content %></p>
        <a href="/articles/<%= article.id %>" class="btn btn-outline-primary">Read More</a>
        <a class="btn btn-outline-warning" href="/articles/edit/<%= article._id %>">Edit</a>
        <form class="d-inline" action="/articles/<%= article._id %>?_method=DELETE" method="POST">
            <button class="btn btn-outline-danger" type="submit">Delete</button>
        </form>
    </div>
</div>
<% }) %>

<%- include('../partials/footer') -%>